page{
  background: #f7f7f7;
}
.news{
  padding: 0 30rpx;
  background: #fff;
}
.news .news_content{
  width: 100%;
  border-bottom: 1rpx solid #eee;
  display: flex;
  padding:30rpx  0;
}
.news .news_content .person{
  width: 84rpx;
	height: 84rpx;
  background: #eee;
  border-radius: 50%;
  margin-right: 25rpx;
 
}
.news .news_content .right {
  width: 80%;
}
.news .news_content .right .text{
  font-size: 28rpx;
  color: #666;
  display: flex;
}
.news .news_content .right .massage{
  font-size: 24rpx;
  color: #999;
}
.news .news_content .right .right_top{
  display: flex;
  justify-content: space-between;
}
.news .news_content .right .right_top .spot{
  width: 11rpx;
  height: 11rpx;
  background: #f54d28;
  border-radius: 50%;
  margin-top: 15rpx;
  margin-left: 10rpx;
}
.news .news_content .right .right_top .time{
  font-size: 22rpx;
  color: #999;
}