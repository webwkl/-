/* pages/my/personallook/personallook.wxss */
page{
  background-color: #f7f7f7;
}
.look_top{
  width: 100%;
  height: 223rpx;
  background-color: #fff;
  margin: 0 auto;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.look_top .photo{
 width: 120rpx;
 height: 120rpx;
}
.look_top .camera{
 width: 32rpx;
 height: 32rpx;
 margin-top: 110rpx;
 margin-left: -33rpx;
}
.look_li{
  width: 750rpx;
  height: 127rpx;
  border-bottom: 1px solid #eee;
  padding: 0 30rpx;
  background-color: #fff;
  line-height: 127rpx;
  display: flex;
   flex-direction: row;
  justify-content: space-between;
}
.look_li text,.look_li input,.picker{
  width: auto;
  height: 127rpx;
  line-height: 127rpx;
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	color: #666666;
}

.look_li .text_l{
  text-align: left
}
.look_li .text_r{
  text-align: right
}
.last_li{
  border:none;
}
.look_btn{
	width: 690rpx;
	height: 80rpx;
	background-color: #f54d28;
	border-radius: 8rpx;
  margin: 0 auto;
  margin-top: 98rpx;
  font-size: 28rpx;
  color: #fff;
   text-align: center;
   line-height: 80rpx;
}