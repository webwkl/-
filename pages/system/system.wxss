/* pages/system/system.wxss */
page{
  padding-top: 30rpx;
  background: #f7f7f7;
}
.system_date{
  display: block;
  width: 690rpx;
  font-family: MicrosoftYaHei;
	font-size: 22rpx;
	color: #666666;
  text-align: center;
  margin: 0 auto;
  margin-bottom: 20rpx;
  
}
.system_li{
  margin-bottom: 20rpx;
}
.system_content{
  display: flex;
  width: 100%;
  padding:0 30rpx;
}
.system_photo{
  width: 84rpx;
  height: 84rpx;
  margin-right: 20rpx;
}
.system_msg{
  width: 530rpx;
  height: auto;
  padding: 30rpx 40rpx 24rpx 30rpx;
  background: #fff;
}
.msg_title{
  display: block;
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	line-height: 24rpx;
	color: #666666;
}
.msg{
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	line-height: 40rpx;
	color: #999999;
  margin-bottom: 24rpx;
}